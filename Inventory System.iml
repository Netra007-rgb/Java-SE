 import java.util.*;
class Product {
    int productId;
    String productName;
    int quantity;
    double price;

    // Constructor
    Product(int id, String name, int qty, double price) {
        productId = id;
        productName = name;
        quantity = qty;
        this.price = price;
    }

    void displayProduct() {
        System.out.println(productId + "  " + productName + "  Qty: " + quantity + "  Price: " + price);
    }
}
class Sale extends Product {
    int soldQty;
    double totalAmount;

    // Constructor using super keyword
    Sale(int id, String name, int qty, double price, int soldQty) {
        super(id, name, qty, price);
        this.soldQty = soldQty;
        totalAmount = soldQty * price;
    }

    void displaySale() {
        System.out.println("Product: " + productName);
        System.out.println("Quantity Sold: " + soldQty);
        System.out.println("Total Amount: " + totalAmount);
    }
}
