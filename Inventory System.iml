                new DeliveryStation("Bangalore", "Indiranagar", "Dhanush Gowda", "9857974212")
        };

        PackageInfo[] packages = new PackageInfo[10];
        int pkgCount = 0;

        int mainChoice;
        do {
            System.out.println("\n===== INVENTORY MANAGEMENT SYSTEM =====");
